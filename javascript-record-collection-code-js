const recordCollection = {
  2548: {
    albumTitle: 'Slippery When Wet',
    artist: 'Bon Jovi',
    tracks: ['Let It Rock', 'You Give Love a Bad Name']
  },
  2468: {
    albumTitle: '1999',
    artist: 'Prince',
    tracks: ['1999', 'Little Red Corvette']
  },
  1245: {
    artist: 'Robert Palmer',
    tracks: []
  },
  5439: {
    albumTitle: 'ABBA Gold'
  }
};

function updateRecords(records, id, prop, value) {
  // 1. If value is an empty string, delete the property
  if (value === "") {
    delete records[id][prop];
  }
  // 2. If prop isn't tracks and value isn't empty string
  else if (prop !== "tracks") {
    records[id][prop] = value;
  }
  // 3. If prop is tracks and album doesn't have a tracks property, create it
  else if (prop === "tracks") {
    // If tracks does not exist, create an empty array first
    if (!records[id].hasOwnProperty("tracks")) {
      records[id].tracks = [];
    }
    // Then push the new track value
    records[id].tracks.push(value);
  }

  // 4. Always return the full records object
  return records;
}


